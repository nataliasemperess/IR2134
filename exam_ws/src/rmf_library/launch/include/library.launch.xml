<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="true"/>
  <arg name="failover_mode" default="false"/>
  <arg name="gazebo_version" default='8'/>
  <arg name="sim_update_rate" default='100'/>

  <!-- Common launch -->
  <include file="$(find-pkg-share rmf_library)/launch/include/common.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="viz_config_file" value ="$(find-pkg-share rmf_library)/config/library.rviz"/>
    <arg name="config_file" value="$(find-pkg-share rmf_library)/maps/library.building.yaml"/>
    <arg name="use_reservation_node" value="true"/>
  </include>

  <!-- TinyRobot fleet adapter -->
  <group>
    <include file="$(find-pkg-share rmf_demos_fleet_adapter)/launch/fleet_adapter.launch.xml">
      <arg name="use_sim_time" value="$(var use_sim_time)"/>
      <arg name="nav_graph_file" value="$(find-pkg-share rmf_library)/maps/nav_graphs/0.yaml" />
      <arg name="config_file" value="$(find-pkg-share rmf_library)/config/tinyRobot_config.yaml"/>
    </include>
  </group>
 
 <!-- CleanerRobot fleet adapter -->

</launch>
